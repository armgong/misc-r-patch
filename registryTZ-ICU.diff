+        size = 1000;
+        rc_tzname = RegQueryValueExW(hkey, L"TimeZoneKeyName", NULL, &type,
+            regdata, &size);
+        RegCloseKey(hkey);
+        if (rc_tzname == ERROR_SUCCESS) {  
