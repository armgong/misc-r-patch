+            }
+            //return result w/o geo
+            if (U_SUCCESS(status)) {
+                wcstombs(Olson, buffer, 64);
+                Olson[63] = '\0';
+                return Olson;
+            }
+        }       
+    }   
+    return "unknown";    
+}
